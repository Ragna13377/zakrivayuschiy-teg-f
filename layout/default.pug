block variables

doctype html
html(lang='ru')
  head
    meta(charset='UTF-8')
    meta(
      name='viewport',
      content='width=device-width, user-scalable=no, initial-scale=1.0, maximum-scale=1.0, minimum-scale=1.0'
    )
    meta(http-equiv='X-UA-Compatible', content='ie=edge')
    title= title
    meta(name='description', content=description)
    meta(name='og:title', content=title)
    meta(name='og:url', content='')
    meta(name='og:description', content=description)
    meta(name='color-scheme', content='light dark')
    link(rel='icon', href='images/favicon/favicon.ico', sizes='any')
    link(
      rel='icon',
      media='(prefers-color-scheme: dark)',
      href='images/favicon/favicon_dark.ico',
      sizes='any'
    )
    link(rel='icon', href='images/favicon/favicon.svg', type='image/svg+xml')
    link(
      rel='apple-touch-icon',
      sizes='180x180',
      href='images/favicon/apple-touch-icon.png'
    )
    link(
      rel='apple-touch-icon',
      media='(prefers-color-scheme: dark)',
      sizes='180x180',
      href='images/favicon/apple-touch-icon_dark.png'
    )
    link(
      rel='icon',
      type='image/png',
      sizes='32x32',
      href='images/favicon/favicon-32x32.png'
    )
    link(
      rel='icon',
      media='(prefers-color-scheme: dark)',
      type='image/png',
      sizes='32x32',
      href='images/favicon/favicon-32x32_dark.png'
    )
    link(
      rel='icon',
      type='image/png',
      sizes='16x16',
      href='images/favicon/favicon-16x16.png'
    )
    link(
      rel='icon',
      media='(prefers-color-scheme: dark)',
      type='image/png',
      sizes='16x16',
      href='images/favicon/favicon-16x16_dark.png'
    )
    link(
      rel='mask-icon',
      href='images/favicon/safari-pinned-tab.svg',
      color='#5bbad5'
    )
    link(
      rel='mask-icon',
      media='(prefers-color-scheme: dark)',
      href='images/favicon/safari-pinned-tab_dark.svg',
      color='#5bbad5'
    )
    link(rel='stylesheet', href='./fonts/fonts.css')
    link(rel='stylesheet', href='./styles/globals.css')
    link(rel='stylesheet', href='./styles/variables.css')
    link(rel='stylesheet', href='./styles/default.css')
    link(rel='stylesheet', href=pageStylesheet)
    link(rel='stylesheet', href='./styles/animations.css')
    link(rel='stylesheet', href='./styles/themes.css')
    script(src='./scripts/set-theme.js')
  body.page
    include ../components/header/header
    main.main
      block content
    include ../components/footer/footer
    script(src='./scripts/like.js')
